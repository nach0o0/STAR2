<UserControl x:Class="WpfClient.Views.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:converters="clr-namespace:WpfClient.Converters"
             xmlns:helpers="clr-namespace:WpfClient.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                  helpers:AutoScrollHelper.AutoScrollToTopOnChange="{Binding ErrorMessage}">
        <StackPanel Margin="30">
            <TextBlock Text="My Profile" FontSize="28" FontWeight="SemiBold" Margin="0,0,0,20"/>

            <TextBlock Text="{Binding SuccessMessage}" Foreground="Green" Margin="0,0,0,10"
                       Visibility="{Binding SuccessMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
            <TextBlock Text="{Binding ErrorMessage}" Foreground="{StaticResource ErrorBrush}" Margin="0,0,0,10"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

            <GroupBox Header="Profile Information" Padding="15">
                <GroupBox.Style>
                    <Style TargetType="GroupBox">
                        <Setter Property="Header" Value="Update Profile Information"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasProfile}" Value="False">
                                <Setter Property="Header" Value="Create Your Profile"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </GroupBox.Style>
                
                <StackPanel>
                    <TextBlock Text="Email Address"/>
                    <TextBlock Text="{Binding Email}" FontWeight="SemiBold" Margin="0,5,0,15"/>
                    
                    <TextBlock Text="First Name"/>
                    <ui:TextBox Text="{Binding Profile.FirstName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,10"/>

                    <TextBlock Text="Last Name"/>
                    <ui:TextBox Text="{Binding Profile.LastName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,20"/>

                    <ui:Button Content="Update Profile" Command="{Binding UpdateProfileCommand}" HorizontalAlignment="Left">
                        <ui:Button.Style>
                            <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasProfile}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ui:Button.Style>
                    </ui:Button>

                    <ui:Button Content="Create Profile" Command="{Binding CreateProfileCommand}" HorizontalAlignment="Left">
                        <ui:Button.Style>
                            <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasProfile}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ui:Button.Style>
                    </ui:Button>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Change Password" Padding="15" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="Old Password"/>
                    <ui:PasswordBox Password="{Binding OldPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,10"/>

                    <TextBlock Text="New Password"/>
                    <ui:PasswordBox Password="{Binding NewPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,20"/>

                    <TextBlock Text="Confirm New Password"/>
                    <ui:PasswordBox Password="{Binding ConfirmNewPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,20"/>

                    <ui:Button Content="Update Password" Command="{Binding ChangePasswordCommand}" HorizontalAlignment="Left"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Active Sessions" Padding="15" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="Here you can see all your active sessions."
                   TextWrapping="Wrap" Margin="0,0,0,15"/>

                    <ListView ItemsSource="{Binding ActiveSessions}" BorderThickness="0" MaxHeight="200">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,5">
                                    <TextBlock Text="{Binding ClientInfo}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding CreatedAt, StringFormat='Logged in on: {0:dd.MM.yyyy HH:mm}'}" Foreground="Gray"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <ui:Button Content="Logout from this session" Command="{Binding LogoutCommand}" 
                   Appearance="Secondary" HorizontalAlignment="Left" Margin="0,20,0,0"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Danger Zone" Padding="15" Margin="0,20,0,0" BorderBrush="{StaticResource ErrorBrush}">
                <StackPanel>
                    <TextBlock Text="Delete Account" FontWeight="Bold"/>
                    <TextBlock Text="This action cannot be undone. Please type your current password to confirm." 
                               TextWrapping="Wrap" Margin="0,5,0,10"/>

                    <ui:PasswordBox Password="{Binding ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,20"/>

                    <ui:Button Content="Delete My Account" Command="{Binding DeleteAccountCommand}" 
                               Appearance="Danger" HorizontalAlignment="Left"/>
                </StackPanel>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>

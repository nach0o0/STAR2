<UserControl x:Class="WpfClient.Views.Shell.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             
             xmlns:converters="clr-namespace:WpfClient.Converters" 
                    
             xmlns:viewModels="clr-namespace:WpfClient.ViewModels"
             xmlns:shellVM="clr-namespace:WpfClient.ViewModels.Shell"
             xmlns:authVM="clr-namespace:WpfClient.ViewModels.Authentication"
             xmlns:userVM="clr-namespace:WpfClient.ViewModels.User"
             xmlns:orgVM="clr-namespace:WpfClient.ViewModels.Organization"
             xmlns:adminVM="clr-namespace:WpfClient.ViewModels.Admin"
             
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ui:NavigationView Grid.Column="0" PaneDisplayMode="Left"
                            IsPaneOpen="True"
                            IsBackButtonVisible="Collapsed">

            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="Home"
                                       Command="{Binding NavigateCommand}"
                                       CommandParameter="{x:Type viewModels:HomeViewModel}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Home24"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem Content="Time Tracking"
                                       Command="{Binding NavigateCommand}"
                                       CommandParameter="{x:Type viewModels:TimeTrackingViewModel}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Clock24"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem Content="Cost Objects"
                                       Command="{Binding NavigateCommand}"
                                       CommandParameter="{x:Type viewModels:CostObjectViewModel}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Briefcase24"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem Content="Planning"
                                       Command="{Binding NavigateCommand}"
                                       CommandParameter="{x:Type viewModels:PlanningViewModel}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="CalendarDataBar24"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem Content="Organization"
                                       Command="{Binding NavigateCommand}"
                                       CommandParameter="{x:Type orgVM:OrganizationWorkspaceViewModel}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="BuildingMultiple24"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem Content="System Administration"
                                       Command="{Binding NavigateCommand}"
                                       CommandParameter="{x:Type adminVM:SystemAdminViewModel}"
                                       Visibility="{Binding CanAccessSystemAdministration, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Shield24"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>

            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem Content="My Profile"
                                       Command="{Binding NavigateCommand}"
                                       CommandParameter="{x:Type userVM:ProfileViewModel}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Person24"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Settings"
                                       Command="{Binding NavigateCommand}"
                                       CommandParameter="{x:Type userVM:SettingsViewModel}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Settings24"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Logout"
                                       Command="{Binding LogoutCommand}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="SignOut24"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.FooterMenuItems>
        </ui:NavigationView>

        <ContentControl Grid.Column="1" Content="{Binding SelectedViewModel}"/>
    </Grid>
</UserControl>

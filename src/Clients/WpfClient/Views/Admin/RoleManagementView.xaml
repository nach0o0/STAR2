                            IsEnabled="{Binding CanManageRolePermissions}"/>

                    <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
                        <ui:Button Content="Save Changes" IsEnabled="{Binding CanEditRoleDetails}"/>
                        <ui:Button Content="Delete Role" Appearance="Danger" Margin="10,0,0,0" 
                                Visibility="{Binding CanDeleteRoles, Converter={StaticResource BooleanToVisibilityConverter}}"/>

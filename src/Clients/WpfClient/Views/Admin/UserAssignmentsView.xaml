<UserControl x:Class="WpfClient.Views.Admin.UserAssignmentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:WpfClient.Views.Admin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,5,0">
        <StackPanel>
            <ui:TextBlock FontSize="18" FontWeight="SemiBold">
                <Run Text="Permissions for:"/>
                <Run Text="{Binding User.DisplayName, Mode=OneWay}" FontWeight="Bold"/>
            </ui:TextBlock>
            <ui:TextBlock Text="{Binding User.Email}" FontSize="12" Foreground="Gray" Margin="0,2,0,0"/>

            <GroupBox Header="Assigned Roles" Margin="0,20,0,0"
                      Visibility="{Binding CanReadAssignments, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel>
                    <ui:ListView ItemsSource="{Binding AssignedRoles}" MaxHeight="150">
                        <ui:ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ui:TextBlock Grid.Column="0" Text="{Binding Name}" Margin="5" VerticalAlignment="Center"/>

                                    <ui:Button Grid.Column="1" Content="Remove" 
                                Appearance="Danger"
                                FontSize="10" Padding="5,2"
                                Command="{Binding DataContext.RemoveRoleCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                CommandParameter="{Binding}"
                                IsEnabled="{Binding DataContext.CanAssignRoles, RelativeSource={RelativeSource AncestorType=ListView}}"/>
                                </Grid>
                            </DataTemplate>
                        </ui:ListView.ItemTemplate>
                    </ui:ListView>
                    <ui:Button Content="Assign Role" Margin="0,10,0,0"
                            HorizontalAlignment="Left"
                            Command="{Binding RequestAssignRoleCommand}"
                            IsEnabled="{Binding CanAssignRoles}"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Directly Assigned Permissions" Margin="0,15,0,0"
                      Visibility="{Binding CanReadAssignments, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel>
                    <ui:ListView ItemsSource="{Binding DirectPermissions}" MaxHeight="150">
                        <ui:ListView.ItemTemplate>
                            <DataTemplate>
                                <ui:TextBlock Text="{Binding Description}" Margin="5" ToolTip="{Binding Id}"/>
                            </DataTemplate>
                        </ui:ListView.ItemTemplate>
                    </ui:ListView>
                    <ui:Button Content="Manage Direct Permissions" Margin="0,10,0,0"
                            HorizontalAlignment="Left"
                               Command="{Binding RequestManageDirectPermissionsCommand}"
                            IsEnabled="{Binding CanAssignDirectPermissions}"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Other Actions" Margin="0,15,0,0">
                <StackPanel>
                    <ui:Button Content="Reset Password" 
                            Command="{Binding ShowResetPasswordFormCommand}"
                            HorizontalAlignment="Left"
                            Visibility="{Binding CanResetPassword, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="3" Padding="10" Margin="0,10,0,0"
                            Visibility="{Binding IsResetPasswordFormVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <ui:TextBlock Text="Set New Password" FontWeight="SemiBold"/>
                            <ui:TextBlock Text="New Password" Margin="0,10,0,0"/>
                            <ui:PasswordBox Password="{Binding NewPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,0"/>

                            <ui:TextBlock Text="Confirm New Password" Margin="0,10,0,0"/>
                            <ui:PasswordBox Password="{Binding ConfirmNewPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,0"/>

                            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                <ui:Button Content="Submit Reset" Command="{Binding SubmitResetPasswordCommand}"/>
                                <ui:Button Content="Cancel" Command="{Binding CancelResetPasswordCommand}" Appearance="Secondary" Margin="10,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>

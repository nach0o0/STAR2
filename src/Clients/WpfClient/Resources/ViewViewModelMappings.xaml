<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    
                    xmlns:views="clr-namespace:WpfClient.Views"
                    xmlns:shellViews="clr-namespace:WpfClient.Views.Shell"
                    xmlns:authViews="clr-namespace:WpfClient.Views.Authentication"
                    xmlns:userViews="clr-namespace:WpfClient.Views.User"
                    xmlns:orgViews="clr-namespace:WpfClient.Views.Organization"
                    xmlns:adminViews="clr-namespace:WpfClient.Views.Admin"
                    
                    xmlns:viewModels="clr-namespace:WpfClient.ViewModels"
                    xmlns:shellVM="clr-namespace:WpfClient.ViewModels.Shell"
                    xmlns:authVM="clr-namespace:WpfClient.ViewModels.Authentication"
                    xmlns:userVM="clr-namespace:WpfClient.ViewModels.User"
                    xmlns:orgVM="clr-namespace:WpfClient.ViewModels.Organization"
                    xmlns:adminVM="clr-namespace:WpfClient.ViewModels.Admin">

    <DataTemplate DataType="{x:Type shellVM:DashboardViewModel}">
        <shellViews:DashboardView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type authVM:LoginViewModel}">
        <authViews:LoginView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type authVM:RegisterViewModel}">
        <authViews:RegisterView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type userVM:ProfileViewModel}">
        <userViews:ProfileView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type userVM:ProfileInfoViewModel}">
        <userViews:ProfileInfoView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type userVM:ChangePasswordViewModel}">
        <userViews:ChangePasswordView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type userVM:ActiveSessionsViewModel}">
        <userViews:ActiveSessionsView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type userVM:DeleteAccountViewModel}">
        <userViews:DeleteAccountView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type adminVM:SystemAdminViewModel}">
        <adminViews:SystemAdminView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type adminVM:UserManagementViewModel}">
        <adminViews:UserManagementView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type adminVM:RoleManagementViewModel}">
        <adminViews:RoleManagementView/>
    </DataTemplate>



    <DataTemplate DataType="{x:Type viewModels:HomeViewModel}">
        <views:HomeView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type orgVM:OrganizationWorkspaceViewModel}">
        <orgViews:OrganizationWorkspaceView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type orgVM:CreateOrganizationViewModel}">
        <orgViews:CreateOrganizationView/>
    </DataTemplate>

</ResourceDictionary>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#F2F2F2" />
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#1C1C1C" />
    <SolidColorBrush x:Key="BorderBrush" Color="#D1D1D1" />

    <SolidColorBrush x:Key="HighlightBrush" Color="#0078D4" />
    <SolidColorBrush x:Key="HighlightMouseOverBrush" Color="#106EBE" />

    <SolidColorBrush x:Key="ErrorBrush" Color="#D32F2F" />
    
</ResourceDictionary>
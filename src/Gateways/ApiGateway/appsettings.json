{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth-authentication-route": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/api/authentication/{**catch-all}" }
      },
      "auth-users-route": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/api/users/{**catch-all}" }
      },
      "organization-employee-groups-route": {
        "ClusterId": "organization-cluster",
        "Match": { "Path": "/api/employee-groups/{**catch-all}" }
      },
      "organization-employees-route": {
        "ClusterId": "organization-cluster",
        "Match": { "Path": "/api/employees/{**catch-all}" }
      },
      "organization-hourly-rates-route": {
        "ClusterId": "organization-cluster",
        "Match": { "Path": "/api/hourly-rates/{**catch-all}" }
      },
      "organization-invitations-route": {
        "ClusterId": "organization-cluster",
        "Match": { "Path": "/api/invitations/{**catch-all}" }
      },
      "organization-organizations-route": {
        "ClusterId": "organization-cluster",
        "Match": { "Path": "/api/organizations/{**catch-all}" }
      },
      "permission-roles-route": {
        "ClusterId": "permission-cluster",
        "Match": { "Path": "/api/roles/{**catch-all}" }
      },
      "permission-permissions-route": {
        "ClusterId": "permission-cluster",
        "Match": { "Path": "/api/permissions/{**catch-all}" }
      },
      "permission-user-permissions-route": {
        "ClusterId": "permission-cluster",
        "Match": { "Path": "/api/user-permissions/{**catch-all}" }
      },
      "session-sessions-route": {
        "ClusterId": "session-cluster",
        "Match": { "Path": "/api/sessions/{**catch-all}" }
      },

      // --- ZUSÄTZLICHE ROUTEN NUR FÜR SWAGGER ---
      "swagger-attendance-route": {
        "ClusterId": "attendance-cluster",
        "Match": { "Path": "/swagger/attendance/{**catch-all}" },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      },
      "swagger-auth-route": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/swagger/auth/{**catch-all}" },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      },
      "swagger-cost-object-route": {
        "ClusterId": "cost-object-cluster",
        "Match": { "Path": "/swagger/cost-object/{**catch-all}" },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      },
      "swagger-organization-route": {
        "ClusterId": "organization-cluster",
        "Match": { "Path": "/swagger/organization/{**catch-all}" },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      },
      "swagger-permission-route": {
        "ClusterId": "permission-cluster",
        "Match": { "Path": "/swagger/permission/{**catch-all}" },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      },
      "swagger-planning-route": {
        "ClusterId": "planning-cluster",
        "Match": { "Path": "/swagger/planning/{**catch-all}" },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      },
      "swagger-session-route": {
        "ClusterId": "session-cluster",
        "Match": { "Path": "/swagger/session/{**catch-all}" },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      },
      "swagger-time-tracking-route": {
        "ClusterId": "time-tracking-cluster",
        "Match": { "Path": "/swagger/time-tracking/{**catch-all}" },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "attendance-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://localhost:5209" }
        }
      },
      "auth-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://localhost:5122" }
        }
      },
      "cost-object-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://localhost:5181" }
        }
      },
      "organization-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://localhost:5140" }
        }
      },
      "permission-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://localhost:5114" }
        }
      },
      "planning-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://localhost:5050" }
        }
      },
      "session-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://localhost:5262" }
        }
      },
      "time-tracking-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://localhost:5180" }
        }
      }
    }
  }
}
